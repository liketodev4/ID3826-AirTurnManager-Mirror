<UserControl x:Class="AirTurnManager.UI.Controls.ParametersActionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:AirTurnManager.UI.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button Margin="{StaticResource SmallLeftTopRightBottomMargin}" Command="{x:Bind RevertToDefaultParametersCommand}">Revert to default</Button>
        <Button Margin="{StaticResource SmallLeftTopRightBottomMargin}" Command="{x:Bind RevertToSavedParametersCommand}">Revert to saved</Button>
        <Button Margin="{StaticResource SmallLeftTopRightBottomMargin}" Command="{x:Bind DoneParametersCommand}">Save to AirTurn</Button>
    </StackPanel>
</UserControl>
